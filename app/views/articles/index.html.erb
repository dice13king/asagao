<% @page_title = "ニュース一覧" %>
<h1><%= @page_title %></h1>


<% if @articles.present? %>
  <table class="list">
    <tr>
      <th>タイトル</th>
      <th>日時</th>
    </tr>
    <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article %></td>
      <td><%= article.released_at.strftime("%Y/%m/%d %H:%M") %></td>
    </tr>
    <% end %>
  </table>
  <%= will_paginate @articles %>
<% else %>
<p>ニュースがありません。</p>
<% end %>
